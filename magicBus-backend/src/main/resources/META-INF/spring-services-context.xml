<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

	<!-- beans de spring -->
	<bean id="services.user" class="domain.services.UserService">
		<property name="repository" ref="persistence.userRepository" />
		<property name="userRepository" ref="persistence.userRepository" />
	</bean>
	<bean id="services.driver" class="domain.services.DriverService">
		<property name="repository" ref="persistence.driverRepository" />
		<property name="driverRepository" ref="persistence.driverRepository" />
	</bean>
	
	
</beans>